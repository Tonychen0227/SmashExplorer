        <thead>
            <tr>
                <th></th>
                @foreach (var headToHead in Model.HeadToHead)
                {
                    <th>@headToHead.Key.PadRight(5, ' ')</th>
                }
                <th>Overall</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var headToHead in Model.HeadToHead)
            {
                <tr>
                    <td>@headToHead.Key</td>
                    @foreach (var comparison in headToHead.Value)
                    {
                        if (comparison.Key == headToHead.Key)
                        {
                            <td>X</td>
                        }
                        else
                        {
                            <td>@($"{comparison.Value.Wins}-{comparison.Value.Losses}")</td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Player</th>
                <th>Performance</th>
                <th>Wins</th>
                <th>Losses</th>
            </tr>
        </thead>
        <tbody>
