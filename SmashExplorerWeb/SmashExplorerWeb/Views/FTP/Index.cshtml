                    <td><a href="@first.EntrantTournamentUrl}" target="_blank">@($"{first.Placement.DisplayWithSuffix()} - {first.TournamentName}")</a></td>
                    <td>@string.Join(", ", first.Wins.Select(x => x.PlayerName))</td>
                    <td>@string.Join(", ", first.Losses.Select(x => x.PlayerName))</td>
