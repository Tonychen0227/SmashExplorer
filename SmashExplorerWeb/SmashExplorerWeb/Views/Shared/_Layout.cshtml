<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="~/Content/SmashBall.png">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#3f80ff">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action(null, "Home")" title="Smash Explorer" class="links">
                    <img style="width:50%;margin-top:10px;margin-left:10px;margin-bottom:10px" alt="Smash Explorer" src="~/Content/logo.png">
                </a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Smash Explorer</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
